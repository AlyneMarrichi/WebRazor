
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p><a class="btn btn-primary btn-lg" href="/Veiculos/Adicionar">Adicionar &raquo;</a></p>
<br />

<table class="table table-hover">
    <tr>
        <th>Marca / Fabricante</th>
        <th>Modelo</th> 
        <th>Ano <br/>Fabricação</th>
        <th>Cor</th>
        <th>Combustivel</th>
        <th>Automático</th>
        <th>Valor</th>
        <th>Ação</th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.List)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Modelo</td>
            <td>@item.Fabricacao</td>
            <td>@item.Cor</td>
            <td>@item.Combustivel</td>
            <td>@item.Automatico</td>
            <td>@item.Valor</td>
            <td><a href="/Veiculos/Alterar/@item.Id">Alterar</a></td>
            <td><a href="/Veiculos/Excluir/@item.Id">Excluir</a></td>
        </tr>
    }
</table>
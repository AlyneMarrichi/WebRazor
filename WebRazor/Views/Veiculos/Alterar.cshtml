@{ 
    var veiculo = ViewBag.veiculo;
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<form action="/veiculos/salvar" method="post">
    <div>
        <input type="hidden" id="id" name="id" value="@veiculo.Id" />
        <label for="nome" class="form-label">Marca:</label>
        <input type="text" class="form-control" id="nome" name="nome" value="@veiculo.Nome" />
    </div>
    <div>
        <label for="modelo" class="form-label">Modelo:</label>
        <input type="text" class="form-control" id="modelo" name="modelo" value="@veiculo.Modelo"  />
    </div>
    <div>
        <label for="fabricacao" class="form-label">Ano:</label>
        <input type="text" class="form-control" id="fabricacao" name="fabricacao" value="@veiculo.Fabricacao"  />
    </div>
    <div>
        <label for="cor" class="form-label">Cor:</label>
        <input type="text" class="form-control" id="cor" name="cor" value="@veiculo.Cor"  />
    </div>
    <div>
        <label for="combustivel" class="form-label">Combustivel:</label>
        <input type="text" class="form-control" id="combustivel" name="combustivel" value="@veiculo.Combustivel"  />
    </div>
    <div>
        <label for="automatico" class="form-label">Automático:</label>
        <input type="text" class="form-control" id="automatico" name="automatico" value="@veiculo.Automatico"  />
    </div>
    <div>
        <label for="valor" class="form-label">Valor:</label>
        <input type="text" class="form-control" id="valor" name="valor" value="@veiculo.Valor"  />
    </div>
    <br />
    <div class="button">
        <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
    </div>
</form>
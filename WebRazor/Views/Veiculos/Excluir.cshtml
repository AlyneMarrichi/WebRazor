@{ 
    var veiculo = ViewBag.veiculo;
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<form action="/veiculos/excluir" method="post">
    <div class="mb-3 row">
        <div class="mb-3">
            <input type="hidden" id="id" name="id" value="@veiculo.Id" />
            <label for="nome" class="form-label">Marca:</label>
            <input type="text" class="form-control" id="nome" name="nome" readonly value="@veiculo.Nome" />
        </div>
        <div class="mb-3">
            <label for="modelo" class="form-label">Modelo:</label>
            <input type="text" class="form-control" id="modelo" name="modelo" readonly value="@veiculo.Modelo" />
        </div>
        <div class="mb-3">
            <label for="fabricacao" class="form-label">Ano:</label>
            <input type="text" class="form-control" id="fabricacao" name="fabricacao" readonly value="@veiculo.Fabricacao" />
        </div>
        <div class="mb-3">
            <label for="cor" class="form-label">Cor:</label>
            <input type="text" class="form-control" id="cor" name="cor" readonly value="@veiculo.Cor" />
        </div>
        <div class="mb-3">
            <label for="combustivel" class="form-label">Combustivel:</label>
            <input type="text" class="form-control" id="combustivel" name="combustivel" readonly value="@veiculo.Combustivel" />
        </div>
        <div class="mb-3">
            <label for="automatico" class="form-label">Automático:</label>
            <input type="text" class="form-control" id="automatico" name="automatico" readonly value="@veiculo.Automatico" />
        </div>
        <div class="mb-3">
            <label for="valor" class="form-label">Valor:</label>
            <input type="text" class="form-control" id="valor" name="valor" readonly value="@veiculo.Valor" />
        </div>
        <br />
        <div class="button">
            <button type="submit" class="btn btn-primary btn-lg">Excluir</button>
        </div>

</form>